@model IEnumerable<DarkBattle.ViewModels.Items.ItemListViewModel>

@{
    ViewData["Title"] = "Items";
}

<h1>Items</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ObtainBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequiredLevel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ObtainBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequiredLevel)
            </td>
            <td>
                <a asp-area="Admin" asp-action="Create" asp-route-itemId="@item.Id">Copy</a> |
                <a asp-area="Admin" asp-action="Edit" asp-route-itemId="@item.Id">Edit</a> |
                <a asp-area="Admin" asp-action="Delete" asp-route-itemId="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
