@using DarkBattle.Services.ServiceModels.Consumables
@model IEnumerable<ConsumableViewServiceModel>

@{
    ViewData["Title"] = "Consumales";
}

<h1>Consubales</h1>

<p>
    <a asp-area="Admin" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RestoreHealth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RestoreHealth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                <img src="@item.ImageUrl" alt="@item.Name" class="imageItemMerchant" />
            </td>
            <td>
                <a asp-area="Admin" asp-action="Create" asp-route-consumableId="@item.Id">Copy</a> |
                <a asp-area="Admin" asp-action="Edit" asp-route-consumableId="@item.Id">Edit</a> |
                <a asp-area="Admin" asp-action="Delete" asp-route-consumableId="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
