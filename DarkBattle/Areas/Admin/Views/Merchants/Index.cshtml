@model IEnumerable<DarkBattle.ViewModels.Merchants.MerchantListViewModel>

@{
    ViewData["Title"] = "Merchants";
}

<h1>Merchants</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                Sell items
            </th>
            <th>
                Sell consumables
            </th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-area="Admin" asp-controller="MerchantItems" asp-action="SellItems" asp-route-merchantId="@item.Id">@item.ItemCount</a>
            </td>
            <td>
                <a asp-area="Admin" asp-controller="MerchantConsumables" asp-action="SellConsumables" asp-route-merchantId="@item.Id">@item.ConsumableCount</a>
            </td>
            <td>
                <a asp-area="Admin" asp-action="Create" asp-route-merchantId="@item.Id">Copy</a> |
                <a asp-area="Admin" asp-action="Edit" asp-route-merchantId="@item.Id">Edit</a> |
                <a asp-area="Admin" asp-action="Delete" asp-route-merchantId="@item.Id">Delete</a> |
                <a asp-area="Admin" asp-controller="MerchantItems" asp-action="ListItems" asp-route-merchantId="@item.Id">Add items</a> |
                <a asp-area="Admin" asp-controller="MerchantConsumables" asp-action="ListConsumables" asp-route-merchantId="@item.Id">Add consumables</a>
            </td>
        </tr>
}
    </tbody>
</table>
