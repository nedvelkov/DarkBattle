@using DarkBattle.ViewModels.CreatureConsumables
@model CreatureConsumableViewModel

@{
    ViewData["Title"] = Model.CreatureName;
}

<h1>@Model.CreatureName</h1>

@if (Model.Consumables.Count != 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    <label>Name</label>
                </th>
                <th>
                    <label>Restore health</label>

                </th>
                <th>
                    <label>Value</label>
                </th>
                <th>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Consumables)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RestoreHealth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value)
                    </td>
                    <td>
                        <img src="@item.ImageUrl" class="imageItemMerchant" alt="@item.Name">
                    </td>
                    <td>
                        <a asp-action="Remove" asp-route-consumableId="@item.Id" asp-route-creatureId="@Model.CreatureId" class="btn btn-primary">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-controller="CreatureConsumables" asp-action="ListConsumablesToAdd" asp-route-creatureId="@Model.CreatureId" class="btn btn-primary">Add items</a>

<a asp-controller="Creatures" asp-action="Index" class="btn btn-primary">Back to creatures</a>
