@using DarkBattle.Services.ServiceModels.Champions

@model ChampionDetailServiceModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details for @Model.Champion.Name</h1>

<hr />

<div class="row">
    <div class="col-4">
        <div class="card" style="width:300px;">
            <img class="card-img-top" src="@Model.Champion.ImageUrl" alt="@Model.Champion.Name" style="height:350px">
            <div class="card-body">
                <h5 class="card-title">@Model.Champion.Name</h5>
                <h6 class="card-title font-italic">@Model.Champion.ChampionClass</h6>
            </div>
            <div>
                <a a asp-controller="Areas" asp-action="BattleZones" asp-route-championId="@Model.Champion.ChampionId" class="btn btn-primary w-100 mb-2">Play</a>
            </div>
            <div>
                <a asp-action="Index" class="btn btn-primary w-100">Select another champion</a>
            </div>
        </div>
    </div>
    <div class="col-8">
        <div class="row">
            <div class="col-2">
                <label asp-for="@Model.Champion.Level"></label>
            </div>
            <span>@Model.Champion.Level</span>
        </div>
        <div class="row">
            <div class="col-2">
                <label>Health</label>
            </div>
            <div class="progress-bar m-1 mb-1" role="progressbar" style="width: 25%;" aria-valuenow="@Model.CurrentHealth" aria-valuemin="0" aria-valuemax="@Model.MaxHealth">@Model.CurrentHealth/@Model.MaxHealth</div>
        </div>
        <div class="row">
            <div class="col-2">
                <label asp-for="@Model.Strenght"></label>
            </div>
            <span>@Model.Strenght</span>
        </div>
        <div class="row">
            <div class="col-2">
                <label asp-for="@Model.Agility"></label>
            </div>

            <span>@Model.Agility</span>
        </div>
        <div class="row">
            <div class="col-2">
                <label asp-for="@Model.SpellPower"></label>
            </div>
            <span>@Model.SpellPower</span>
        </div>
        <div class="row">
            <div class="col-2">
                <label asp-for="@Model.Description"></label>
            </div>
            <span>@Model.Description</span>
        </div>
        <div class="row">
            <div class="col-8 text-center">
                <h4 class="font-weight-bold text-center">Battle stats</h4>
                <hr />
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                <label asp-for="@Model.Attack"></label>
            </div>
            <span> @String.Format("{0:0.00}", Model.Attack)</span>

        </div>
        <div class="row">
            <div class="col-2">
                <label asp-for="@Model.CritChanse"></label>
            </div>
            <span> @String.Format("{0:0.00}", Model.CritChanse)</span>
        </div>
        <div class="row">
            <div class="col-2">
                <label asp-for="@Model.Defense"></label>
            </div>
            <span> @String.Format("{0:0.00}", Model.Defense)</span>

        </div>
        <div class="row">
            <div class="col-2">
                <label asp-for="@Model.Block"></label>
            </div>
            <span> @String.Format("{0:0.00}", Model.Block)</span>
        </div>
        <div class="row">
            <a asp-action="Inventory" asp-route-championId="@Model.Champion.ChampionId" class="btn btn-primary ">Inventory</a>
        </div>
    </div>
</div>