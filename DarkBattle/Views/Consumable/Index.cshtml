@model IEnumerable<DarkBattle.ViewModels.Consumables.ConsumableListViewModel>

@{
    ViewData["Title"] = "Consubales";
}

<h1>Consubales</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RestoreHealth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RestoreHealth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                <a asp-action="Create" asp-route-consumableId="@item.Id">Copy</a> |
                <a asp-action="Edit" asp-route-consumableId="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-consumableId="@item.Id">Delete</a> |
                <a asp-action="AddToArea" asp-route-consumableId="@item.Id">Add to creature</a> |
                <a asp-action="AddToArea" asp-route-consumableId="@item.Id">Add to merchant</a>
            </td>
        </tr>
}
    </tbody>
</table>
