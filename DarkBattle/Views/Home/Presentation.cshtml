@using DarkBattle.ViewModels.Home
@model List<PresentationViewModel>

@{
    ViewBag.Title = "Welcome!";
}


<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">

        @for (int i = 0; i < Model.Count; i++)
        {
            var slide = Model[i];
        <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
            <img class="rounded mx-auto d-block w-auto h-auto" src="@slide.ImageUrl" alt="@slide.SlideName">
            <div class="carousel-caption d-md-block mb-4">
                <h2 class="badge badge-light">@slide.Description</h2>
                <br />
            </div>
            <div class="carousel-caption d-inline-block">
                <h3 class="badge badge-light">@slide.Statistic @slide.StatisticValue</h3>
            </div>

        </div>
        }

    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-12 text-center">
        <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register">Join Now</a>
    </div>
</div>




@section Scripts {
    <script>
        $('.carousel').carousel()
    </script>
}