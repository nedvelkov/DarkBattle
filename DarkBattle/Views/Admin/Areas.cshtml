@model IEnumerable<DarkBattle.Models.Areas.AreasListViewModel>

@{
    ViewData["Title"] = "Areas";
}

<h1>Areas</h1>

<p>
    <a asp-action="AddAreas">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <label>Name</label>
            </th>
            <th>
                <label>Description</label>
            </th>
            <th>
                <label>Min level for area</label>
            </th>
            <th>
                <label>Max level creature</label>
            </th>
            <th>
                <label>Creature count in area</label>
            </th>
            <th>
                <label>Add creatures to area</label>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr >
            <td>
                <label asp-for="@item.Name">@item.Name</label>
            </td>
            <td>
                <label asp-for="@item.Description">@item.Description</label>
            </td>
            <td>
                <label asp-for="@item.MinLevel">@item.MinLevel</label>
            </td>
            <td>
                <label asp-for="@item.MaxLevel">@item.MaxLevel</label>
            </td>
            <td>
                <label asp-for="@item.CraturesCount">@item.CraturesCount</label>
            </td>
            <td>
                                                                                                             @*TODO redirect to Add creaturte*@
                <button type="button" class="btn btn-link justify-content-md-center" asp-controller="Admin" asp-action="Areas">Add creatures</button>
            </td>
        </tr>
}
    </tbody>
</table>
